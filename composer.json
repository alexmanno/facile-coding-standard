{
    "name": "facile-it/facile-coding-standard",
    "description": "Facile.it coding standard",
    "license": "MIT",
    "keywords": [
        "facile",
        "facile.it",
        "coding standard"
    ],
    "scripts": {
        "pre-install-cmd": "Facile\\CodingStandards\\Installer\\Configuration::install",
        "pre-update-cmd": "Facile\\CodingStandards\\Installer\\Configuration::install",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix --diff"
    },
    "require": {
        "php": "^7.0",
        "friendsofphp/php-cs-fixer": "^2.3"
    },
    "require-dev": {
        "composer/composer": "^1.3.2"
    },
    "autoload": {
        "psr-4": {
            "Facile\\CodingStandards\\": "src/"
        }
    }
}
